# Reemplazar el contenido del .gitignore
cat > .gitignore << 'EOF'
# ignore all files starting with .
.*

# track this file .gitignore (i.e. do NOT ignore it)
!.gitignore
!.github
php_errorlog
.log

# do not ignore gitpod and render files
!.gitpod.Dockerfile
!.welcome
!.devcontainer
!.devcontainer/*
!Dockerfile.render
!.gitpod.yml
!render.yml
!.render-buildpacks.json

# track webpack configs (i.e. do NOT ignore it)
!composer.json
!webpack.config.js
!package.json
!webpack.production.js
!webpack.development.js

# track readme.md in the root (i.e. do NOT ignore it)
!README.md

# ignore OS generated files
ehthumbs.db
Thumbs.db

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.komodoproject

# ignore log files and databases
*.log
*.sql
*.sqlite

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# ignore node/grunt dependency directories
node_modules/

# webpack output
dist/*
!public/
!public/*

# ignore the dist directory were our bundle files are going to be
!.gitkeep
!.htaccess
!.eslintrc
!.env.example
.now

# backend stuff
.venv
database.database
database.db
diagram.png
__pycache__/

# ========================================
# NUEVAS REGLAS ESPECÍFICAS PARA TU PROYECTO
# ========================================

# Ignorar node_modules en cualquier directorio
**/node_modules/

# Ignorar archivos de dependencias en directorio raíz (fuera de react-flask-hello)
/package.json
/package-lock.json

# Ignorar base de datos SQLite
react-flask-hello/src/instance/peregrinos.db
react-flask-hello/src/instance/*.db

# Ignorar archivos de entorno
.env
.env.local
.env.production
.env.development

# Ignorar archivos de IDE
.vscode/
.idea/
*.swp
*.swo

# Ignorar archivos temporales
*.tmp
*.temp

# Ignorar archivos de sistema
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignorar logs de la aplicación
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignorar carpetas de build
build/
dist/
out/

# Ignorar coverage reports
coverage/
*.lcov

# Ignorar cache
.cache/
.parcel-cache/
EOF